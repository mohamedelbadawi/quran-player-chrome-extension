{
    "name": "Quran",
    "version": "1.0.0",
    "description": "Quran music player",
    "manifest_version": 3,
    "author": "Mohamed Reda Elbadawi",
    "action": {
        "default_title": "Quran",
        "default_popup": "index.html"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "16": "images/icon.png",
        "128": "images/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ]
}